{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "mode": {
            "type": "string",
            "enum": ["warn", "fail", "enforce"],
            "description": "Action mode: 'warn' logs warnings, 'fail' fails the workflow, 'enforce' strictly enforces all rules"
        },
        "require_sbom": {
            "type": "boolean",
            "description": "Whether to require SBOM files"
        },
        "require_provenance": {
            "type": "boolean",
            "description": "Whether to require provenance attestations"
        },
        "sbom_paths": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "List of paths to search for SBOM files"
        }
    },
    "additionalProperties": false
}
